<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonCustomStyleFacebook" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">#3D579D</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonCustomStyleGoogle" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">#db4437</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditTexts" parent="ThemeOverlay.AppCompat">
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:paddingTop">@dimen/common_16</item>
        <item name="android:paddingBottom">@dimen/common_16</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
