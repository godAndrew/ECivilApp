<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonCustomStyleFacebook" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">#3D579D</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonCustomStyleGoogle" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">#db4437</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonOffline" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonCustomSimec" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">#f0222222</item>
        <item name="android:padding">@dimen/common_8</item>
    </style>

    <style name="EditTexts" parent="ThemeOverlay.AppCompat">
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:paddingTop">@dimen/common_16</item>
        <item name="android:paddingBottom">@dimen/common_16</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextViewNameHeader" parent="Theme.AppCompat">
        <item name="android:paddingTop">@dimen/common_8</item>
        <item name="android:paddingBottom">@dimen/common_8</item>
        <item name="android:paddingRight">@dimen/common_36</item>
        <item name="android:paddingLeft">@dimen/common_8</item>
        <item name="android:background">@drawable/bg_title_syllabus</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPrefixHeader" parent="TextViewNameHeader">
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="android:background">#777</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewLastPrefixHeader" parent="TextViewNameHeader">
        <item name="android:background">@drawable/bg_title_syllabus_last_tv</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewAttrHeader" parent="TextViewNameHeader">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#585858</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="TextViewNameCategories" parent="Theme.AppCompat">
        <item name="android:padding">@dimen/common_8</item>
        <item name="android:background">@drawable/bg_subs_syllabus</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Calendar Styles-->
    <style name="CalendarTextNormal" parent="Theme.AppCompat">
        <item name="android:textColor">#212121</item>
    </style>

    <style name="CalendarTextWarning" parent="Theme.AppCompat">
        <item name="android:textColor">#d50000</item>
    </style>

    <style name="CalendarTextEvent" parent="Theme.AppCompat">
        <item name="android:textColor">#03a9f4</item>
    </style>

    <style name="CalendarTextHoliday" parent="Theme.AppCompat">
        <item name="android:textColor">#00c853</item>
    </style>

    <style name="CalendarTextGriffin" parent="Theme.AppCompat">
        <item name="android:background">#ffea00</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="TextViewTitlePalestra" parent="Theme.AppCompat">
        <item name="android:paddingLeft">@dimen/common_8</item>
        <item name="android:paddingRight">@dimen/common_8</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">#c8000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/common_8</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewContentPalestra" parent="Theme.AppCompat">
        <item name="android:paddingLeft">@dimen/common_8</item>
        <item name="android:paddingRight">@dimen/common_8</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:bufferType">spannable</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewTitleMinicurso" parent="Theme.AppCompat">
        <item name="android:paddingLeft">@dimen/common_8</item>
        <item name="android:paddingRight">@dimen/common_8</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">#c8000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/common_8</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewContentMinicurso" parent="Theme.AppCompat">
        <item name="android:paddingLeft">@dimen/common_8</item>
        <item name="android:paddingRight">@dimen/common_8</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:bufferType">spannable</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
