<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="@dimen/common_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_40">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                      android:id="@+id/civ_profile_header"
                                                      android:layout_width="@dimen/common_72"
                                                      android:layout_height="@dimen/common_72"
                                                      android:layout_marginBottom="@dimen/common_8"
                                                      android:layout_marginLeft="16dp"
                                                      android:src="#00f"
                                                      app:civ_border_color="#fff"
                                                      app:civ_border_width="0.8dp" />

        <TextView
            android:id="@+id/tv_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/civ_profile_header"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/civ_profile_header"
            android:layout_toRightOf="@+id/civ_profile_header"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/common_8"
            android:paddingLeft="@dimen/common_8"
            android:paddingRight="@dimen/common_16"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Vinicius da Silva Costa\n Almada"/>

        <TextView
            android:id="@+id/tv_email_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/civ_profile_header"
            android:layout_alignStart="@+id/civ_profile_header"
            android:layout_below="@+id/civ_profile_header"
            android:textColor="#eee"
            tools:text="vinicius.almada@acad.ifma.edu.br"/>

        <TextView
            android:id="@+id/tv_code_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_email_header"
            android:layout_alignStart="@+id/tv_email_header"
            android:layout_below="@+id/tv_email_header"
            android:layout_marginBottom="@dimen/common_16"
            android:textColor="#eee"
            android:textStyle="bold"
            tools:text="EC1411029-21"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>