<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:background="#eee"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_16"
    android:paddingRight="@dimen/common_16">


    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_prof"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_time"
        android:layout_toLeftOf="@+id/tv_time"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:text="TextView"
        android:textColor="#212121"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Segurança do Trabalho" />

    <TextView
        android:id="@+id/tv_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/common_8"
        android:fontFamily="sans-serif-smallcaps"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="#505050"
        android:textSize="14sp"
        tools:text="CONCEIÇÃO DE MARIA" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/common_8"
        android:layout_marginTop="@dimen/common_8"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_8"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:text="18:30\n19:19" />

</RelativeLayout>
