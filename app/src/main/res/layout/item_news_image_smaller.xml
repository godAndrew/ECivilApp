<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/common_16"
                                    android:layout_marginEnd="@dimen/common_16"
                                    android:layout_marginRight="@dimen/common_16"
                                    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/simec_logo_title"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_image"
            android:layout_marginTop="@dimen/common_8"
            android:fontFamily="sans-serif-condensed"
            android:minLines="3"
            android:padding="@dimen/common_8"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Campus Barreirinhas divulga 3Âª lista de espera" />
    </RelativeLayout>
</android.support.v7.widget.CardView>