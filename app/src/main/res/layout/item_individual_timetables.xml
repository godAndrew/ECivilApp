<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <Switch
            android:id="@+id/sw_sujects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingBottom="@dimen/common_8"
            android:paddingLeft="@dimen/common_16"
            android:paddingRight="@dimen/common_16"
            android:paddingTop="@dimen/common_8"
            android:textAllCaps="false"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/Base.Theme.AppCompat.Light"
            tools:checked="false"
            tools:text="Introdução ao Método dos Elementos Finitos"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="@dimen/common_16"
            android:layout_marginRight="@dimen/common_16"
            android:layout_marginTop="@dimen/common_8"
            android:background="#AAA"/>

    </LinearLayout>

