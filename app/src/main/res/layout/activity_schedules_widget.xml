<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/common_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_8"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/configure"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="1º Período"/>

            <RadioButton
                android:id="@+id/rb_p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="2º Período"/>

            <RadioButton
                android:id="@+id/rb_p3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="3º Período"/>

            <RadioButton
                android:id="@+id/rb_p4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="4º Período"/>

            <RadioButton
                android:id="@+id/rb_p5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="5º Período"/>

            <RadioButton
                android:id="@+id/rb_p6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="6º Período"/>

            <RadioButton
                android:id="@+id/rb_p7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="7º Período"/>

            <RadioButton
                android:id="@+id/rb_p8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="8º Período"/>

            <RadioButton
                android:id="@+id/rb_p9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="9º Período"/>

            <RadioButton
                android:id="@+id/rb_p10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="10º Período"/>

            <RadioButton
                android:id="@+id/rb_p11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Horário Individual"/>
        </RadioGroup>

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_8"
            android:text="ADD WIDGET"/>

    </LinearLayout>

</ScrollView>